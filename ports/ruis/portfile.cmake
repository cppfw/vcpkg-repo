vcpkg_check_linkage(ONLY_STATIC_LIBRARY)

vcpkg_from_github(
    OUT_SOURCE_PATH SOURCE_PATH
    REPO cppfw/${PORT}
    REF 2057bbaf9985e2ca9b532340787aadb04bf582db
    SHA512 81dd77dd207966191264a58a16ebf96f6836b20d5602f977985a161b02e5ea86d5b4e09081416265e27c61f1b5f059c7d7fd4915174a4b1dd230148cbc6df18a
