vcpkg_check_linkage(ONLY_STATIC_LIBRARY)

vcpkg_from_github(
    OUT_SOURCE_PATH SOURCE_PATH
    REPO cppfw/${PORT}
    REF a87aa834a10013ce25f1ef9528d81a1e6c9e65fb
    SHA512 64d67c9eb7ab9addad821aabe08bbd1118cf5506b017c02b99124d82edd98889c6f67cee25b3d2dc366040131e646739539fc4a2db2c2240d8673a33b4797a39
