vcpkg_check_linkage(ONLY_STATIC_LIBRARY)

vcpkg_from_github(
    OUT_SOURCE_PATH SOURCE_PATH
    REPO cppfw/${PORT}
    REF 3e78946fc4a7f3bfde28666e4e7c5ec80f6e3c27
    SHA512 48c56455e62ae9d44046e93004504d36e66527744b1266657da23bb3d1371a03962185ea59473e6ad82ef91500d5cd14543259a34e785707dc15558f9b4d5458
    HEAD_REF main
)

vcpkg_cmake_configure(
    SOURCE_PATH "${SOURCE_PATH}/build/cmake"
)

vcpkg_cmake_install()

